<resources>
    <!-- Common -->
    <color name="transparent">#00000000</color>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>

    <color name="app.line">#3DDDF9FF</color>
    <!-- Theme - Dark Blue -->
    <color name="app.theme.dark_blue.background">#3C5F78</color>
    <color name="app.theme.dark_blue.gradientColor">#507E9F</color>
    <color name="app.theme.dark_blue.colorControlActivated">#7AFFFFFF</color>
    <color name="app.theme.dark_blue.colorControlHighlight">#7AFFFFFF</color>

    <color name="app.theme.dark_blue.colorPrimary">#3C5F78</color><!--toolbar背景顏色-->
    <color name="app.theme.dark_blue.colorPrimaryDark">#3C5F78</color><!--状态栏背景顏色-->
    <color name="app.theme.dark_blue.colorAccent">#DDF9FF</color><!--字体顏色-->
    <color name="app.theme.dark_blue.textColorPrimary">#DDF9FF</color><!--toolbar title字体顏色-->
    <color name="app.theme.dark_blue.textColorSecondary">#3C5F78</color>

    <color name="app.theme.dark_blue.actionMode.statusBarColor">#9CBDCC</color>
    <color name="app.theme.dark_blue.actionMode.background">#9CBDCC</color>

    <!-- ImageView Control -->
    <color name="app.image.tint">#b85671</color>

    <!-- TextView Control -->
    <color name="app.text">#ffffff</color>
    <color name="app.text.black">@color/black</color>
    <color name="app.text.bg.yellow">#FEA501</color>
    <color name="app.text.bg.pink">#FD7071</color>
    <color name="app.text.bg.blue">#20C1FD</color>
    <color name="app.text.pink">#fb7299</color>
    <color name="app.text.black.normal">#555555</color>
    <color name="app.text.black.alpha.45">#71000000</color>
    <color name="app.text.gray.normal">#656565</color>
    <color name="app.text.tint">#9CBDCC</color>

    <!-- CardView Control -->
    <color name="app.cardview.background">@color/white</color>

    <!-- listview Control -->
    <color name="app.list.background">#1ADDF9FF</color>
    <color name="app.list.background.selected">#6CDDF9FF</color>
    <color name="app.list.scrollThumb">#99DDF9FF</color>
    <color name="app.list.text.title">#DDF9FF</color>
    <color name="app.list.text.title.selected">#3C5F78</color>
    <color name="app.list.text.hint">#9CBDCC</color>
    <color name="app.list.text.hint.selected">#7C3C5F78</color>

    <color name="app.popupMenu.background">#B4D2E0</color>

    <color name="app.text.hint">#9CBDCC</color>

    <!-- Segmented Control -->
    <color name="app.widget.segmented.default">?attr/colorAccent</color>
    <color name="app.widget.segmented.checked">#3C5F78</color>

    <!-- navigation Control -->
    <color name="app.widget.navigation.bg">?attr/background</color>
    <color name="app.widget.navigation.checked">#3C5F78</color>

    <!-- CharacterView -->
    <color name="app.characterView.background">#9CBDCC</color>
    <color name="app.characterView.textColor">@color/app.list.text.title</color>

    <array name="app_main_tabs">
        <item name="tab1">#455C65</item>
        <item name="tab2">#00886A</item>
        <item name="tab3">#8B6B62</item>
        <item name="tab4">#6C4A42</item>
        <item name="tab5">#F63D2B</item>
    </array>
</resources>